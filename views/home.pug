extends layout.pug

block append styles
	style.
		.dummy {
			background-color: #0f0f0f; 
		}

block append scripts
	script(src="scripts/login.js")

block content
	div#login(style= user === undefined ? "" : "display: none;")
		form
			div.form-group
				label(for='name') Name:
				input#name.form-control(type='text', placeholder='your name' name='username')
				div.form-group
				label(for='pw') Password:
				input#pw.form-control(type='password' name='password')
			button.btn.btn-primary(type='submit') Log in