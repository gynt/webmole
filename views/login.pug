extends layout.pug

block append styles
	style.
		.dummy {
			background-color: #0f0f0f; 
		}

block content
	form(method='POST', action='login(this)')
		div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='your name' name='name')
		div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
		button.btn.btn-primary(type='submit') Log in